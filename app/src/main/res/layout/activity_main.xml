<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="5pt"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="10pt"
        android:gravity="center">

        <Button
            android:id="@+id/btnFirstCFirstR"
            android:layout_width="50pt"
            android:layout_height="50pt" />

        <Button
            android:id="@+id/btnSecondCFirstR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />

        <Button
            android:id="@+id/btnThirdCFirstR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="5pt"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="10pt"
        android:gravity="center">

        <Button
            android:id="@+id/btnFirstCSecondR"
            android:layout_width="50pt"
            android:layout_height="50pt" />

        <Button
            android:id="@+id/btnSecondCSecondR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />

        <Button
            android:id="@+id/btnThirdCSecondR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="5pt"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="10pt"
        android:gravity="center">

        <Button
            android:id="@+id/btnFirstCThirdR"
            android:layout_width="50pt"
            android:layout_height="50pt" />

        <Button
            android:id="@+id/btnSecondCThirdR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />

        <Button
            android:id="@+id/btnThirdCThirdR"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_marginStart="5pt"
            android:layout_marginLeft="5pt" />
    </TableRow>
</TableLayout>